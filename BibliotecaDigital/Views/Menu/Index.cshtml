@{
    ViewData["Title"] = "Panel Biblioteca";
}

<div class="container text-center mt-5">
    <h1 class="mb-4">Bienvenido a la Biblioteca Digital</h1>
    <p class="text-muted">Selecciona una sección para administrar:</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-3">
            <a asp-controller="Usuario" asp-action="Index" class="btn btn-primary w-100 mb-3">Usuarios</a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Libros" asp-action="Index" class="btn btn-success w-100 mb-3">Libros</a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Prestamos" asp-action="Index" class="btn btn-warning w-100 mb-3">Préstamos</a>
        </div>
    </div>
</div>