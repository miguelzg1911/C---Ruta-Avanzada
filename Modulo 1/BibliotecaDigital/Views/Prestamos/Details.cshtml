@model BibliotecaDigital.Models.Prestamos

@{
    ViewData["Title"] = "Detalles del Préstamo";
}

<h2>@ViewData["Title"]</h2>

<div class="card p-3">
    <p><strong>Usuario:</strong> @Model.Usuario?.Nombre</p>
    <p><strong>Libro:</strong> @Model.Libro?.Titulo</p>
    <p><strong>Fecha Préstamo:</strong> @Model.FechaPrestamo.ToShortDateString()</p>
    <p><strong>Fecha Devolución:</strong> @Model.FechaDevolucion?.ToShortDateString()</p>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>